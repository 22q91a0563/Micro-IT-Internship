import random as rd
import string as st
def generate_password(length, use_uppercase=True, use_numbers=True, use_special_chars=True):
    lowercase = st.ascii_lowercase
    uppercase = st.ascii_uppercase
    digits = st.digits
    special_chars = st.punctuation
    ps = lowercase
    if use_uppercase:
        ps += uppercase
    if use_numbers:
        ps += digits
    if use_special_chars:
        ps += special_chars
    password = ''.join(rd.choice(ps) for _ in range(length))
    return password
password_length = int(input("Enter the desired password length: "))
use_uppercase = input("Include 10% uppercase letter at the start:").lower() == 'yes'
use_numbers = input("Include 60% numbers at the last:").lower() == 'yes'
use_special_chars = input("Include 10% special characters in the middle:").lower() == 'yes'
password = generate_password(password_length, use_uppercase, use_numbers, use_special_chars)
print(f"Your generated password is: {password}")
